<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:animateLayoutChanges="true"
    tools:context=".MainActivity"
    android:id="@+id/container" >

    <TextView
        android:id="@+id/numericE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/numericE" 
        android:layout_marginLeft="20dip"
        android:textSize="40sp"
        android:alpha="0"
       />
    
    
    <TextView
        android:id="@+id/N"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/N" 
        android:layout_marginLeft="10dip"
        android:textSize="40sp"
        android:layout_toRightOf="@id/numericE"
        android:alpha="0"
        />
    
    <TextView
        android:id="@+id/T"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/N"
        android:textSize="40sp"
        android:text="@string/T" 
        android:alpha="0"/>
    
       
    <com.vector.entourage.IconImageview
            android:contentDescription="@string/icon_content_description"
            android:id="@+id/o_icon"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_toRightOf="@id/T"
        android:textSize="20sp"
        android:layout_marginLeft="10dip"
        android:src="@drawable/o_icon" />
    
    <TextView
        android:id="@+id/U"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/o_icon"
        android:textSize="40sp"
        android:text="@string/U"
        android:alpha="0" />
    
    <TextView
        android:id="@+id/R"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/U"
        android:textSize="40sp"
        android:text="@string/R"
        android:alpha="0" />
    
    <TextView
        android:id="@+id/A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/R"
        android:textSize="40sp"
        android:text="@string/A"
        android:alpha="0" />
    
    <TextView
        android:id="@+id/G"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/A"
        android:textSize="40sp"
        android:text="@string/G"
        android:alpha="0" />

    
    <TextView
        android:id="@+id/E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/G"
        android:textSize="40sp"
        android:text="@string/E" 
        android:alpha="0"/>


    <TextView 
        android:id="@+id/login_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginTop="140dip"
        android:layout_below="@id/numericE"
        android:textSize="20sp"
        android:text="@string/login_label"
        android:alpha="0" />
    
    <EditText
          android:id="@+id/login"
          android:layout_width="100dip"
          android:layout_height="wrap_content"
          android:layout_alignBottom="@+id/login_label"
          android:layout_alignLeft="@+id/password"
          android:layout_alignTop="@+id/login_label"
          android:layout_alignParentRight="true"
          android:inputType="textEmailAddress"
          android:textSize="20sp" 
          android:alpha="0"/>
    
     <TextView 
        android:id="@+id/password_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_marginTop="40dip"
        android:layout_alignLeft="@id/login_label"
        android:layout_below="@id/login_label"
        android:textSize="20sp"
        android:text="@string/password_label"
        android:alpha="0"/>
     
      <EditText
          android:id="@+id/password"
          android:layout_width="100dip"
          android:layout_height="wrap_content"
          android:layout_alignBottom="@id/password_label"
          android:layout_alignTop="@+id/password_label"
          android:layout_marginLeft="30dip"
          android:layout_toRightOf="@id/password_label"
          android:inputType="textPassword"
          android:textSize="20sp"
          android:layout_alignParentRight="true"
          android:text="@string/login_password" 
          android:alpha="0"/> 
          
       <Button 
          android:id="@+id/loginButton"
          android:layout_width="100dip"
          android:layout_height="wrap_content"
          android:layout_below="@id/password"
          android:textSize="20sp"
          android:text="@string/login" 
          android:layout_marginTop="20dip"
          android:layout_centerHorizontal="true"
          /> 

</RelativeLayout>
